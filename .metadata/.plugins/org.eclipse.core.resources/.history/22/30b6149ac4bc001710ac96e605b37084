package controller;

import javafx.scene.layout.Pane;
import javafx.stage.Stage;
import view.grain.input.AddGrainWindow;
import view.grain.input.GrainInputView;

/**
 * 
**/

public class GrainHandler
{
	public static GrainHandler instance = null;
	
	private Stage mode;
	
	
	
	
	private GrainHandler () {}
	
	
	
	public GrainHandler getInstance ()
	{
		if (instance == null)
			return new GrainHandler();
		else
			return instance;
	}
	
	
	public void setToAdd (AddGrainWindow grainOptionWindow)
	{
		mode = grainOptionWindow;
	}
	
	
	public void setToRemove ()
	{
		
	}
	
	
}
